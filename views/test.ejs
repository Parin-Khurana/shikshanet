<script>


  // Global variables
  let sections, sectionSelect, studentsList, selectAllCheckbox, assignButtonContainer, assignButton, testFileInput, messageDiv;
  
  // Global variable to store uploaded file URL
  window.uploadedFileUrl = null;

  // Global function to update assign button state
  window.updateAssignButtonState = function() {
    if (!sectionSelect || !studentsList || !assignButtonContainer || !assignButton) {
      console.log('Elements not ready yet');
      return;
    }
    
    const hasSection = sectionSelect.value !== "";
    const hasSelectedStudents = studentsList.querySelectorAll('.student-checkbox:checked').length > 0;
    // File upload is now optional - can assign tests without files
    const hasUploadedFile = window.uploadedFileUrl !== null;

    console.log('Assign button state check:', {
      hasSection,
      hasSelectedStudents,
      hasUploadedFile,
      sectionValue: sectionSelect.value,
      uploadedFileUrl: window.uploadedFileUrl
    });

    // Only require section and at least one student - file is optional
    if (hasSection && hasSelectedStudents) {
      console.log('Enabling assign button');
      assignButtonContainer.classList.add('visible');
      assignButton.disabled = false;
    } else {
      console.log('Disabling assign button');
      assignButtonContainer.classList.remove('visible');
      assignButton.disabled = true;
    }
  };

  document.addEventListener('DOMContentLoaded', () => {
  // Sections data from backend
  sections = <%- JSON.stringify(teacher.sections) %>;

  sectionSelect = document.getElementById('section-select');
  studentsList = document.getElementById('students-list');
  selectAllCheckbox = document.getElementById('select-all');
  assignButtonContainer = document.getElementById('assign-button-container');
  assignButton = document.getElementById('assign-button');
  testFileInput = document.getElementById('pdfFile');
  messageDiv = document.getElementById('message');

  // Debug: Log sections data
  console.log('Sections data:', sections);

  // Initial render - show first section if available
  if (sections && sections.length) {
    const firstSectionIndex = 0;
    console.log('First section index:', firstSectionIndex);
    console.log('Setting sectionSelect.value to:', firstSectionIndex);
    sectionSelect.value = firstSectionIndex;
    const firstSection = sections[firstSectionIndex];
    console.log('First section found:', firstSection);
    console.log('First section students:', firstSection?.students);
