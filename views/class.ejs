   <script>
const sectionsData = <%- JSON.stringify(teacher.sections) %>;
console.log('Sections data loaded:', sectionsData);
const classSelect = document.getElementById("class-select");
const studentsContainer = document.querySelector(".students-scroll");
const uploadArea = document.querySelector('.upload-area');

document.addEventListener("DOMContentLoaded", function () {
    const materialSelect = document.getElementById("material-select");
    const fileInput = document.getElementById("material-upload");

    // ----- Class/Section dropdown change -----
    classSelect.addEventListener("change", function () {
        const selectedSectionIndex = parseInt(this.value);
        console.log('Class selected:', selectedSectionIndex);
        if (!isNaN(selectedSectionIndex) && selectedSectionIndex >= 0 && selectedSectionIndex < sectionsData.length) {
            renderStudents(selectedSectionIndex);
        } else {
            studentsContainer.innerHTML = "<p style='text-align: center; color: #666; padding: 20px;'>Select a class to view students</p>";
            document.getElementById('attendance-date').textContent = "Select a class to view students";
        }
    });

    // Initial render - show first section if available
    if (sectionsData && sectionsData.length > 0) {
        classSelect.value = 0;
        renderStudents(0);
    }

    // ----- Material dropdown change -----
    materialSelect.addEventListener("change", function () {
        const value = materialSelect.value;
        if (value === "browse") {
            window.location.href = "/browse";
        } else if (value === "upload") {
            fileInput.click();
        }
    });

    // ----- Material file input change -----
    fileInput.addEventListener("change", async function () {
        const files = Array.from(fileInput.files);
        if (files.length === 0) return;

        // Remove previous uploaded options
        const existingOptions = Array.from(materialSelect.options).filter(opt => opt.classList.contains("uploaded-file"));
        existingOptions.forEach(opt => opt.remove());

        // Upload files one by one
        for (const file of files) {
            if (!['application/pdf', 'video/mp4'].includes(file.type)) {
                alert(`File type not allowed: ${file.name}`);
                continue;
            }

            const fileUrl = await uploadMaterial(file);
            if (!fileUrl) {
                alert(`Upload failed: ${file.name}`);
                continue;
            }

            const option = document.createElement("option");
            option.value = fileUrl; // Use uploaded file URL
            option.textContent = file.name;
            option.classList.add("uploaded-file");
            materialSelect.appendChild(option);
        }

        // Select first successfully uploaded file
        const firstOption = materialSelect.querySelector(".uploaded-file");
        if (firstOption) materialSelect.value = firstOption.value;
    });

    // ----- Assignment button click -----
    const assignButtons = document.querySelectorAll('.assignment-buttons .btn');
    assignButtons.forEach(button => {
        button.addEventListener('click', async function () {
            assignButtons.forEach(btn => {
                btn.classList.remove('btn-primary');
                btn.classList.add('btn-secondary');
            });
            this.classList.remove('btn-secondary');
            this.classList.add('btn-primary');

            // 1️⃣ Selected section
            const sectionIndex = parseInt(classSelect.value);
            const section = sectionsData[sectionIndex];
            console.log('SMS Assignment - Section index:', sectionIndex);
            console.log('SMS Assignment - Section found:', section);
            if (!section || !section.students || !section.students.length) {
                alert("No students in this class!");
                return;
            }

            // 2️⃣ Selected file
            const fileName = materialSelect.value;
            if (!fileName || ["", "browse", "upload"].includes(fileName)) {
                alert("Please select or upload a material first!");
                return;
            }
            const fileUrl = fileName; // Already set as URL in option.value

            // 3️⃣ Determine recipients
            const recipients = this.textContent.includes("whole class")
                ? section.students.map(s => s.phone)
                : section.students.filter(s => s.status === "ABSENT").map(s => s.phone);

            console.log('SMS Assignment - Recipients:', recipients);
            console.log('SMS Assignment - Button text:', this.textContent);
            console.log('SMS Assignment - Section students:', section.students);

            if (!recipients.length) {
                alert("No recipients found!");
                return;
            }

            // 4️⃣ Send SMS
            try {
                const res = await fetch("/send-sms", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        recipients,
                        message: `Hi! A new material has been assigned to you. View it here: ${fileUrl}`
                    }),
                });
                const data = await res.json();
                if (data.success) alert("SMS sent successfully!");
                else alert("Some messages failed.");
            } catch (err) {
                console.error("Error sending SMS:", err);
                alert("Error sending SMS. Check console for details.");
            }
        });
    });

    // ----- Menu toggle -----
    const menuToggle = document.querySelector('.menu-toggle');
    const nav = document.querySelector('nav');
    menuToggle.addEventListener('click', () => {
        nav.classList.toggle('active');
    });
});

// ----- Render students for selected section -----
function renderStudents(sectionIndex) {
    console.log('Rendering students for section index:', sectionIndex);
    const section = sectionsData[sectionIndex];
    console.log('Section found:', section);
    studentsContainer.innerHTML = "";

    if (!section || !section.students || !section.students.length) {
        studentsContainer.innerHTML = "<p>No students found in this section</p>";
        document.getElementById('attendance-date').textContent = "No students available";
        return;
    }

    // Update attendance date
    const currentDate = new Date().toLocaleDateString('en-GB');
    document.getElementById('attendance-date').textContent = currentDate;

    section.students.forEach(student => {
        const div = document.createElement("div");
        div.classList.add("attendance-card");
        
        // Determine attendance status - default to present if not specified
        const status = student.status || "PRESENT";
        const statusClass = status === "PRESENT" ? "status-present" : "status-absent";
        
        div.innerHTML = `
            <div class="student-info">
                <input type="checkbox" class="checkbox">
                <div class="student-details">
                    <h3>${student.name || 'Unknown Student'}</h3>
                    <p>${student.phone || 'No phone number'}</p>
                </div>
            </div>
            <span class="attendance-status ${statusClass}">${status}</span>
        `;
        studentsContainer.appendChild(div);
    });
}

// Initial render - show first section if available
if (sectionsData && sectionsData.length) {
    const firstSectionId = sectionsData[0]._id || sectionsData[0].id;
    renderStudents(firstSectionId);
} else {
    studentsContainer.innerHTML = "<p style='text-align: center; color: #666; padding: 20px;'>No sections available</p>";
}

classSelect.addEventListener("change", () => {
    renderStudents(classSelect.value);
});

// ----- Upload Area (OCR) -----
uploadArea.addEventListener('click', () => {
    const input = document.createElement('input');
    input.type = 'file';
    input.accept = '.png,.jpg,.jpeg,.pdf';
    input.onchange = async (e) => {
        const file = e.target.files[0];
        if (!file) return;

        const formData = new FormData();
        formData.append('file', file);

        try {
            const res = await fetch('/class', { method: 'POST', body: formData });
            const data = await res.json();
            if (data.error) {
                alert("OCR failed: " + data.error);
                return;
            }
            populateStudents(data.students, data.date);
        } catch (err) {
            console.error(err);
            alert("Error uploading or parsing file");
        }
    };
    input.click();
});

// Drag & drop visual effects
uploadArea.addEventListener('dragover', function(e) {
    e.preventDefault();
    this.style.borderColor = 'rgba(56, 78, 183, 0.6)';
});
uploadArea.addEventListener('dragleave', function(e) {
    e.preventDefault();
    this.style.borderColor = 'rgba(56, 78, 183, 0.3)';
});
uploadArea.addEventListener('drop', function(e) {
    e.preventDefault();
    this.style.borderColor = 'rgba(56, 78, 183, 0.3)';
    console.log('Files dropped:', e.dataTransfer.files);
});

// ----- Upload material function -----
async function uploadMaterial(file) {
    try {
        const formData = new FormData();
        formData.append("file", file);

        const res = await fetch("/upload", {
            method: "POST",
            body: formData,
        });
        const data = await res.json();

        if (data.fileUrl) {
            return data.fileUrl;
        } else {
            console.error("Upload error:", data);
            return null;
        }
    } catch (err) {
        console.error("Upload failed:", err);
        return null;
    }
}




// ----- Populate OCR students -----
function populateStudents(students, date) {
    studentsContainer.innerHTML = "";

    let presentCount = 0;
    let absentCount = 0;

    students.forEach(student => {
        const card = document.createElement('div');
        card.classList.add('attendance-card');

        const infoDiv = document.createElement('div');
        infoDiv.classList.add('student-info');

        const checkbox = document.createElement('input');
        checkbox.type = 'checkbox';
        checkbox.classList.add('checkbox');

        const details = document.createElement('div');
        details.classList.add('student-details');
        details.innerHTML = `<h3>${student.name}</h3><p>${student.phone}</p>`;

        infoDiv.appendChild(checkbox);
        infoDiv.appendChild(details);

        const status = document.createElement('span');
        status.classList.add('attendance-status', student.status === "PRESENT" ? 'status-present' : 'status-absent');
        status.textContent = student.status;

        card.appendChild(infoDiv);
        card.appendChild(status);

        studentsContainer.appendChild(card);

        if (student.status === "PRESENT") presentCount++;
        else absentCount++;
    });

    const presentBadge = document.querySelector('.badge-present');
    const absentBadge = document.querySelector('.badge-absent');
    if (presentBadge) presentBadge.textContent = `Present : ${presentCount}`;
    if (absentBadge) absentBadge.textContent = `Absent : ${absentCount}`;
}
