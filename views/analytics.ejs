  margin-left: 0;
  margin-right: auto;
}

.detailed-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 25px;
}

.progress-item {
  display: grid;
  grid-template-columns: 200px 1fr 50px;
  align-items: center;
  gap: 15px;
  margin-bottom: 13px;
}

.progress-label {
  font-size: 14px;
  font-weight: 500;
}

.progress-bar-wrapper {
  height: 8px;
  background-color: #f5f5f5;
  border-radius: 4px;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  border-radius: 4px;
  transition: width 0.5s ease-in-out;
}

.progress-value {
  font-size: 14px;
  font-weight: 600;
  text-align: right;
}

.purple-bar {
  background-color: #9333ea;
}

.pink-bar {
  background-color: #ec4899;
}

.blue-bar {
  background-color: #3b82f6;
}

@media (max-width: 992px) {
  .stat-cards-container {
    grid-template-columns: 1fr;
  }
  .chart-cards-container {
    grid-template-columns: 1fr;
  }
  .attendance-chart-content {
    flex-direction: column;
    justify-content: center;
  }
